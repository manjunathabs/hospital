		<center> <h1>Registration Page </h1></center>
<fieldset>
<legend> Registration </legend>
		<%= form_tag(:action=>'create') do %>

		<table class="patient_form" width="100%" id="personal_table">

			<tr>
				<td>
					<div>
						<label>
							<b> <%= "Gender" %></b>
						</label>

						<span class='mandatorty_color'>*</span> </div>
						<%= select :patient,:gender,[["Select",""],["MALE","1"],["FEMALE","2"],["OTHER","3"]],{},:style=>""%></td>


					</td>
					<td>
						<div>
							<label>
								<b><%= "First Name" %></b>
							</label>

							<span class='mandatorty_color'>*</span></div>

							<%= text_field :patient, :first_name, html_options={:onBlur => "add_employee_name()",:onkeypress=>"return letter(event)", :maxlength => 30,:tabindex => "1",:size=>"10",:style=>"text-transform:uppercase"} %>
						</td>

						<td>                        
							<div>
								<label>
									<b><%= "Last Name" %></b>
								</label>
							</div>
							<%= text_field :patient, :last_name, html_options={:onBlur => "add_employee_name()",:onkeypress=>"return letter(event)", :maxlength => 30,:tabindex => "2",:size=>"10",:style=>"text-transform:uppercase"} %>
						</td>

					</tr>

					<tr>

						<td id="dob" style="display:block;">
							<div>
								<label>
									<b><%= "DOB" %></b>
								</label>
								<span class='mandatorty_color'>*</span></div>



								<%= text_field :patient,:date_of_birth,:class=>'date',:id=>'patient_date_of_birth',:readonly=>'true',:value=> '',:size=>"10",:maxlength=>30%>


							</td>


							<td>         <div>      
								<label>
									<b>Address</b>
									<span class='mandatorty_color'>*</span>
								</label> </div>


								<%= text_field :patient,:address,:value => '',:style=>"text-transform:uppercase;",:tabindex => "17",:size=>"10",:maxlength=>30 %>
							</td>

							<td>
								<div>
									<label><b>Mobile No.</b>
										<span class='mandatorty_color'>*</span>
									</label> </div>
									<%= text_field :patient,:mobile_number,:maxlength =>10,:value => '', :class => 'size150',:onkeyPress => "return float_only(event)",:size=>"10" ,:tabindex => "21" %>
								</td>










							</tr>




						</table></fieldset>

<center>         <%= submit_tag 'Register', :name => 'operation', :class => 'buttons', :id =>'Credit_bill' %></center>

						<% end %>



						<title>jQuery Datepicker: Disable Future Dates</title>
						<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" />
						<script src="http://code.jquery.com/jquery-1.8.2.js"></script>
						<script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
						<script type="text/javascript">
							$(function() {
								var date = new Date();
								var currentMonth = date.getMonth();
								var currentDate = date.getDate();
								var currentYear = date.getFullYear();
								$('#patient_date_of_birth').datepicker({
									maxDate: new Date(currentYear, currentMonth, currentDate)
								});
							});
						</script>

